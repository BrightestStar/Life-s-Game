<div id="objective_content">
    <h2>
        完成清单
    </h2>
    <br>
    <% if current_user && current_user == @objective.user %>
    <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to("继续任务", new_objective_post_path, class: "btn btn-primary btn-sm") %>
    </div>
    <% end %>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td><%= @objective.task %></td>
                <td><%= @objective.second %></td>
                <td><%= @objective.third %></td>
                <% if user_signed_in? %>
                <td width="20%">任务管理</td>
                <% end %>
                <td width="20%">完成时间</td>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
            <tr>
                <th>
                    <%= post.id %>
                </th>
                <th>
                    <%= post.first %>
                </th>
                <th>
                    <%= post.second %>
                </th>
                <th>
                    <%= post.third %>
                </th>
                <% if user_signed_in? %>
                <th>
                    <%= link_to("修改", edit_objective_post_path(post.objective, post)) %>
                </th>
                <% end %>
                <th><%= post.created_at.strftime("%B, %d, %Y") %></th>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>

<div id="objective_content">
    <div id="posts">
        <h3><%= @objective.comments.count %>
            条评论</h3>
        <br>
        <%= render @objective.comments %>

        <%= render "comments/form" %>
    </div>
</div>
