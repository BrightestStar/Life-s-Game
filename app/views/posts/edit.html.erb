<div id="objective_content">
    <h3>
        <% if (@post.created_at.to_date - @objective.created_at.to_date).to_i < 1 %>
        第1天(修改)
    <% else %>
        第<%= (@post.created_at.to_date - @objective.created_at.to_date).to_i %>天(修改)
        <% end %>
    </h3>

    <%= simple_form_for [@objective, @post] do |f| %>
    <br>
    <p class="date">
        <h4>任务：<%= @objective.task %></h4><br>
        <%= f.label :完成情况 %>：
        <br>
        <%= f.text_field :first %>
    </p>
    <br>

    <p class="date">
        <h4>任务：<%= @objective.second %></h4><br>
        <%= f.label :完成情况 %>：
        <br>
        <%= f.text_field :second %>
    </p>
    <br>

    <p class="date">
        <h4>任务：<%= @objective.third %></h4><br>
        <%= f.label :完成情况 %>：
        <br>
        <%= f.text_field :third %>
    </p>
    <br>

    <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

    <% end %>
</div>
