<div class="post clearfix">
    <div class="post_content">
        <p class="post_body"><%= comment.user.name %>:<%= comment.body %></p>
        <p class="post_time"><%= time_ago_in_words(comment.created_at) %>
            Ago</p>
    </div>

    <% if current_user && current_user == comment.user %>
    <p><%= link_to 'Delete', [comment.objective, comment],
                   method: :delete,
                   class: "button",
                   data: { confirm: "Are you sure?" } %>
    </p>
    <% end %>
</div>
