<div id="objective_content">

    <h2>修改个人资料</h2>
    <br><br>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

        <div class="form-group">
            <%= f.label :name %><br/>
            <%= f.text_field :name, class: "form-control", :autofocus => true %>
        </div>

        *<%= f.label :邮箱 %><br>
        <%= f.email_field :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for:
            <%= resource.unconfirmed_email %></p>
        <% end %>
        <br><br>
        <%= f.label :新密码 %><br>
        <%= f.password_field :password, autocomplete: "off", required: false %><br>
        （如果不改密码，可以不填）
        <br><br>
        <%= f.label :新密码确认 %><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", required: false %>
        <br><br>
        *<%= f.label :当前密码 %><br>
        <%= f.password_field :current_password,required: true %>

    </div>
    <br>

    <div class="form-actions">
        <%= f.button :submit, "Update" %>
    </div>
    <% end %>

    <br><br>
    <%= link_to "返回", :back, class: "btn btn-default" %>
    <br><br>
    <p>
        <%= link_to "注销", registration_path(resource_name), data: { confirm: "如果销注，你的所以任务都将删除，你确定吗？" }, method: :delete, class: "btn btn-default" %>你不爱我了？</p>

</div>
